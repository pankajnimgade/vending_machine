<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:columnCount="3"
    android:rowCount="3">

    <ImageView
        android:id="@+id/single_product_item_product_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_columnWeight=".20"
        android:layout_margin="4dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center|start"
        android:layout_margin="4dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/single_product_item_product_name_textView"
            style="@style/TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Product Name" />

        <TextView
            android:id="@+id/single_product_item_product_type_textView"
            style="@style/TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"

            android:text="Product Type" />

        <TextView
            android:id="@+id/single_product_item_product_price_textView"
            style="@style/TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="start"
            android:text="Product Price" />

    </LinearLayout>


    <Button
        android:id="@+id/single_product_item_plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_margin="4dp"
        android:layout_row="0"
        android:text="+" />

    <Button
        android:id="@+id/single_product_item_minus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_margin="4dp"
        android:layout_row="2"
        android:text="-" />

    <TextView
        android:id="@+id/single_product_item_quantity_textView"
        style="@style/TextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="0" />
</GridLayout>