<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MakePaymentFragment_root_layout_CoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:minWidth="250dp"
    app:layout_gravity="center_horizontal"
    tools:context="com.nimgade.pk.vendingmachine.activities.user.interaction.view.MakePaymentFragment">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:minWidth="250dp"
        android:padding="20dp"
        app:columnCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Make Payment"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_columnSpan="2"
            app:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Bill : $"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="right"
            app:layout_row="2" />

        <TextView
            android:id="@+id/MakePaymentFragment_bill_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="0"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="left"
            app:layout_row="2" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="3" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/MakePaymentFragment_dollars_TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dollars"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/MakePaymentFragment_cents_TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cents"
                android:inputType="number"
                android:maxLength="2" />
        </android.support.design.widget.TextInputLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="5" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Payment: $ "
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="6" />

        <TextView
            android:id="@+id/MakePaymentFragment_payment_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="0"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="6" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="7" />

        <Button
            android:id="@+id/MakePaymentFragment_pay_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:textAllCaps="false"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="center_horizontal"
            app:layout_row="8" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="9" />

        <TextView
            android:id="@+id/MakePaymentFragment_change_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change: "
            android:visibility="invisible"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="center_horizontal"
            app:layout_row="10"
            tools:visibility="visible" />


    </android.support.v7.widget.GridLayout>

</android.support.design.widget.CoordinatorLayout>
